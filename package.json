{
  "name": "core3-github-utils",
  "version": "0.0.1",
  "private": true,
  "description": "Utilities for Github Actions",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "prebuild": "npm run clean",
    "build": "npm run build:ts && npm run bundle",
    "build:ts": "tsc -p tsconfig.build.json",
    "bundle": "ncc build --source-map --license licenses.txt",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha \"test/**/*.test.ts\"",
    "prettify": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/core3-github-utils.git"
  },
  "keywords": [
    "core3",
    "github",
    "utils"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "playwright-core": "^1.15.0"
  },
  "devDependencies": {
    "@ts-tools/node": "^3.0.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.8",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vercel/ncc": "^0.31.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "mocha": "^9.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
